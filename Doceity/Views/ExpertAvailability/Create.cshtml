@* File: Views/ExpertAvailability/Create.cshtml *@
@model Doceity.Models.Availability 

@{
    ViewData["Title"] = "Aggiungi Nuova Disponibilità";
    Layout = "~/Pages/Shared/_Layout.cshtml"; // Assicurati che il percorso del layout sia corretto
}

<h1>@ViewData["Title"]</h1>
<p>Definisci una nuova data e fascia oraria in cui sei disponibile.</p>
<hr />

<div class="row">
    <div class="col-md-6"> @* Limita la larghezza del form *@
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="AvailableDate" class="form-label"></label>
                <input asp-for="AvailableDate" class="form-control" type="date" />
                <span asp-validation-for="AvailableDate" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StartTime" class="form-label"></label>
                    <input asp-for="StartTime" class="form-control" type="time" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EndTime" class="form-label"></label>
                    <input asp-for="EndTime" class="form-control" type="time" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
            </div>

            @* Esempio se avessi altri campi nel modello Availability, come Notes *@
            @*
            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            *@

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Salva Disponibilità</button>
                <a asp-action="Index" class="btn btn-secondary">Annulla</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}